.header
    position fixed
    top 0
    left 0
    z-index 1

    box-sizing border-box
    display flex
    justify-content center
    align-items center

    font-size 1em
    height header-size
    width 100%

    background-color black
    color white

    border-bottom 1px solid #333
    box-sizing border-box

    text-align center

    @keyframes header
        0%
            transform translate3d(0, -50px, 0)
        100%
            transform translated3d(0, 0, 0)

    animation header 1s
