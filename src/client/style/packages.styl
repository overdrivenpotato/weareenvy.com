.packages
    donate-color = #00b4ff

    width 100%
    max-width 40em
    display flex
    flex-direction column
    align-items left

    &__selector
        display flex
        flex-wrap wrap
        justify-content center
        align-items space-between

    &__donate-message
        font-size 0.7em
        padding 1em
        color donate-color
        text-align center

    &__donations
        height 3.5em
        padding 1em

        display flex
        align-items center
        justify-content space-around
        flex-wrap wrap

        @keyframes donate
            0%
                opacity 0
            100%
                opacity 1

        animation donate 0.5s

        &--hidden
            animation none

    &__donate-button
        color donate-color
        display flex
        align-items center
        justify-content center

        cursor pointer
        text-decoration none

        width 10em
        height 3.5em

        border 1px solid donate-color
        box-sizing border-box

        &:hover
            background-color donate-color
            color black

        transition all 0.5s

    &__option
        cursor pointer
        margin 1em
        padding 1em

        flex-grow 1
        display flex
        flex-direction column
        height 10em
        width 10em
        max-width 20em
        border 1px solid #333
        box-sizing border-box

        &--selected
            background-color white
            border-color white
            color black

        transition all 1s

        @keyframes option
            0%
                transform scale(0.95)
                opacity 0
            100%
                transform scale(1)
                opacity 1

        animation option 1s

    &__value
        width 100%

        font-size 2em

        display flex
        align-items center
        justify-content center

        flex-grow 1

    &__name
        font-size 1.2em
        margin-bottom 0.2em

    &__description
        font-size 0.8em
