.packages
    width 100%
    max-width 40em
    display flex
    flex-direction column
    align-items left

    &__selector
        display flex
        flex-wrap wrap
        justify-content center
        align-items space-between

    &__option
        cursor pointer
        margin 1em
        padding 1.2em

        flex-grow 1
        display flex
        flex-direction column
        height 10em
        width 11em
        max-width 20em
        border 1px solid #333
        box-sizing border-box

        &--selected
            background-color white
            border-color white
            color black

        transition all 1s

        @keyframes option
            0%
                transform scale(0.95)
                opacity 0
            100%
                transform scale(1)
                opacity 1

        animation option 1s

    &__value
        width 100%

        font-size 2em

        display flex
        align-items flex-end

        flex-grow 1

        &::after
            content "reach"
            font-size 0.5em
            margin-bottom 0.1em
            margin-left 0.5em

    &__name
        font-size 1.2em
        margin-bottom 0.2em

    &__description
        font-size 0.8em
